{
    "manifest_version": 3,
    "name": "LinkedIn Job Saver",
    "version": "1.0.5",
    "description": "Guarda autom√°ticamente tus postulaciones de LinkedIn en Google Sheets.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ], 
    "host_permissions": [
        "https://script.google.com/macros/s/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png"
        }
    },
    "minimum_chrome_version": "100",
    "options_page": "options.html"
    
}